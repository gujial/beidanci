.container {
    padding: 16px;
  }
  .search-bar {
    display: flex;
    gap: 8px;
    margin-bottom: 16px;
    justify-content: space-around;
  }
  input {
    width: 50%;
    border: 1px solid #ccc;
    padding: 8px;
    border-radius: 4px;
  }
  button {
    padding: 8px 12px;
  }
  .record-item {
    padding: 12px;
    border-bottom: 1px solid #eee;
    width: 100%;
  }
  .word {
    font-weight: bold;
    font-size: 18px;
  }
  .translate {
    color: #666;
  }
  .meta {
    font-size: 12px;
    color: #999;
    margin-top: 4px;
    display: flex;
    justify-content: space-between;
  }
  .empty {
    text-align: center;
    color: #888;
    margin-top: 50px;
  }
  