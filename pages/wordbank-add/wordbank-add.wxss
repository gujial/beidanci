.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0 30rpx;
}

.input-guide {
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.example {
  font-size: 26rpx;
  color: #666;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.text-area-container {
  flex: 1;
  margin-bottom: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.text-input {
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.6;
  border: 1rpx solid #ddd;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.button-container {
  padding: 30rpx 0;
  width: 100%;
}

.recognize-button {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 90%;
  margin: 0 auto;
  border-radius: 50rpx;
} 