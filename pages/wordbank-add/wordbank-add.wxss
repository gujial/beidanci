.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.text-area-container {
  flex: 1;
  margin-bottom: 30rpx;
}

.text-input {
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.button-container {
  padding: 20rpx 0;
}

.recognize-button {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 80%;
  margin: 0 auto;
} 