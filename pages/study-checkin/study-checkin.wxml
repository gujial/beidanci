<view class="container">
  <view class="card checkin-card animate-fade-in">
    <view class="checkin-header">
      <text class="text-title">学习打卡</text>
      <text class="text-subtitle">坚持就是胜利</text>
    </view>

    <view class="calendar-section">
      <view class="month-title">{{currentMonth}}</view>
      <view class="calendar-grid">
        <view 
          wx:for="{{calendarDays}}" 
          wx:key="index" 
          class="calendar-day {{item.status}}"
          data-date="{{item.date}}"
          bindtap="selectDate"
        >
          <text class="day-number">{{item.day}}</text>
          <text wx:if="{{item.status === 'checked'}}" class="check-icon">✓</text>
        </view>
      </view>
    </view>

    <view class="stats-section">
      <view class="stat-item">
        <text class="stat-value">{{continuousDays}}</text>
        <text class="stat-label">连续打卡天数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{totalStudyTime}}</text>
        <text class="stat-label">总学习时长(分)</text>
      </view>
    </view>

    <view class="checkin-section">
      <button 
        class="btn btn-primary" 
        bindtap="checkIn"
        disabled="{{isCheckedToday}}"
      >
        <text class="btn-text">
          {{isCheckedToday ? '今日已打卡' : '立即打卡'}}
        </text>
      </button>
    </view>

    <view class="achievement-section">
      <text class="text-subtitle">成就徽章</text>
      <view class="badge-list">
        <view 
          wx:for="{{achievements}}" 
          wx:key="index" 
          class="badge {{item.achieved ? 'active' : ''}}"
        >
          <image src="{{item.icon}}" class="badge-icon"></image>
          <text class="badge-name">{{item.name}}</text>
        </view>
      </view>
    </view>
  </view>
</view> 