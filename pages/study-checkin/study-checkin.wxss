.checkin-card {
  width: 90%;
  max-width: 700rpx;
  text-align: center;
  padding: 40rpx;
}

.checkin-header {
  margin-bottom: 30rpx;
}

.calendar-section {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.month-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  padding: 15rpx;
  position: relative;
}

.calendar-day.checked {
  background-color: var(--primary-color);
  color: white;
}

.day-number {
  font-size: 28rpx;
}

.check-icon {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  font-size: 24rpx;
  color: white;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: #f0f4f8;
  border-radius: 12rpx;
  padding: 30rpx 0;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-color);
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 10rpx;
}

.checkin-section {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
}

.achievement-section {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.badge-list {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.5;
}

.badge.active {
  opacity: 1;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.badge-name {
  font-size: 24rpx;
  color: #7f8c8d;
} 