.checkin-history {
    padding: 24rpx;
    background-color: #f9f9f9;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  .section {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 32rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .title {
    font-weight: bold;
    font-size: 36rpx;
    margin-bottom: 20rpx;
    color: #333;
    border-left: 10rpx solid #4caf50;
    padding-left: 16rpx;
  }
  
  .calendar-wrapper {
    border: 1rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 16rpx;
    background-color: #fafafa;
  }
  
  .history-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .history-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background-color: #fefefe;
    border-radius: 12rpx;
    border: 1rpx solid #e0e0e0;
  }
  
  .date {
    font-size: 30rpx;
    color: #555;
  }
  
  .streak {
    font-size: 28rpx;
    color: #4caf50;
    font-weight: bold;
  }
  