.tomato-card {
  width: 90%;
  max-width: 600rpx;
  text-align: center;
  padding: 40rpx;
}

.tomato-header {
  margin-bottom: 30rpx;
}

.timer-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.timer {
  font-size: 72rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.timer-status {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-top: 10rpx;
}

.study-mode {
  margin-bottom: 30rpx;
}

.picker-display {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
}

.word-section {
  background-color: #f0f4f8;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.current-word {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 15rpx;
}

.word-meaning {
  font-size: 36rpx;
  color: #7f8c8d;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn {
  width: 30%;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #e0e0e0;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.progress {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.5s ease;
}

.study-stats {
  display: flex;
  justify-content: space-around;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 10rpx;
} 