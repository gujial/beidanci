.container {
  display: flex;
  justify-content: center;
  align-items: center;
}
.word-section {
  font-size: 24px;
  text-align: center;
  margin-bottom: 30px;
}
.options-section {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.options-section button {
  margin: 10px 0;
}
.score-section {
  margin-top: 30px;
  text-align: center;
}
.picker-section {
    margin: 20rpx;
    font-size: 32rpx;
  }
  
