.container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.word-section {
    font-size: 24px;
    text-align: center;
    margin-bottom: 30px;
}

.options-section {
    display: flex;
    flex-direction: column;
    align-items: stretch;
}

.options-section button {
    margin: 10px 0;
}

.score-section {
    margin-top: 30px;
    text-align: center;
}

.picker-section {
    margin: 20rpx;
    font-size: 32rpx;
}

.picker-display {
    padding: 10rpx 20rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.option-button {
    margin: 10rpx 0;
    padding: 20rpx;
    font-size: 32rpx;
    border-radius: 10rpx;
    background-color: #f2f2f2;
}

.option-button.correct {
    background-color: #a2e38c;
}

.option-button.incorrect {
    background-color: #f56c6c;
}
