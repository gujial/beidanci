.container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .word-section {
    font-size: 24px;
    text-align: center;
    margin-bottom: 30px;
  }
  .options-section {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
  .options-section button {
    margin: 10px 0;
  }
  .score-section {
    margin-top: 30px;
    text-align: center;
  }
  .picker-section {
      margin: 20rpx;
      font-size: 32rpx;
    }
    
    .picker-display {
      padding: 10rpx 20rpx;
      background-color: #f5f5f5;
      border-radius: 10rpx;
      margin-top: 10rpx;
    }
    
.review-card {
  width: 90%;
  max-width: 600rpx;
  text-align: center;
  padding: 40rpx;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.word-display {
  margin-bottom: 30rpx;
}

.word {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-color);
}

.pronunciation {
  font-size: 32rpx;
  color: #7f8c8d;
  margin-left: 10rpx;
}

.meaning-section {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  min-height: 100rpx;
}

.meaning {
  font-size: 36rpx;
  color: #2c3e50;
}

.meaning.hint {
  color: #7f8c8d;
  font-style: italic;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn {
  width: 45%;
}

.memory-rating {
  margin-bottom: 30rpx;
}

.rating-title {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #7f8c8d;
}

.rating-buttons {
  display: flex;
  justify-content: space-between;
}

.rating-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.rating-btn.easy {
  background-color: #4CAF50;
  color: white;
}

.rating-btn.medium {
  background-color: #FFC107;
  color: white;
}

.rating-btn.hard {
  background-color: #F44336;
  color: white;
}

.rating-btn:hover {
  opacity: 0.8;
}

.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #e0e0e0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.5s ease;
}
