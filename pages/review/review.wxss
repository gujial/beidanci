.container {
    padding: 32rpx;
  }
  
  .review-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 32rpx;
  }
  
  .text-title {
    font-size: 40rpx;
    font-weight: bold;
  }
  
  .text-subtitle {
    font-size: 28rpx;
    color: #888;
  }
  
  .word-display {
    text-align: center;
    margin-bottom: 24rpx;
  }
  
  .word {
    font-size: 48rpx;
    font-weight: bold;
  }
  
  .pronunciation {
    font-size: 32rpx;
    color: #888;
  }
  
  .choices {
    margin: 30rpx 0;
  }
  
  .choice {
    padding: 24rpx;
    margin-bottom: 20rpx;
    background-color: #f2f2f2;
    border-radius: 16rpx;
    text-align: center;
    font-size: 28rpx;
  }
  
  .meaning-section {
    text-align: center;
    margin: 30rpx 0;
  }
  
  .meaning {
    font-size: 30rpx;
  }
  
  .hint {
    color: #999;
    font-style: italic;
  }
  
  .button-group {
    display: flex;
    justify-content: space-around;
    margin-bottom: 32rpx;
  }
  
  .btn {
    width: 40%;
    padding: 20rpx;
    border-radius: 12rpx;
  }
  
  .btn-primary {
    background-color: #007aff;
    color: white;
  }
  
  .btn-secondary {
    background-color: #ccc;
    color: black;
  }
  
  .btn-text {
    font-size: 28rpx;
  }
  
  .memory-rating {
    margin-top: 32rpx;
    text-align: center;
  }
  
  .rating-title {
    font-size: 28rpx;
    margin-bottom: 12rpx;
  }
  
  .rating-buttons {
    display: flex;
    justify-content: space-around;
  }
  
  .rating-btn {
    padding: 16rpx 20rpx;
    border-radius: 10rpx;
    font-size: 26rpx;
  }
  
  .easy {
    background-color: #a8e6cf;
  }
  
  .medium {
    background-color: #ffd3b6;
  }
  
  .hard {
    background-color: #ff8b94;
  }
  