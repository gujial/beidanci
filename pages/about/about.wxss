.container {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 40rpx;
    text-align: center;
  }
  
  .section {
    width: 100%;
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .section text {
    display: block;
    font-size: 26rpx;
    margin-bottom: 6rpx;
    color: #333;
  }
  