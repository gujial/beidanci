.calendar {
    padding: 20rpx;
  }
  .weekdays, .days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    text-align: center;
    margin-bottom: 10rpx;
  }
  .day-box {
    padding: 10rpx;
    height: 60rpx;
    line-height: 40rpx;
  }
  .day-box.checked {
    background-color: #90ee90;
    border-radius: 50%;
    font-weight: bold;
  }
  